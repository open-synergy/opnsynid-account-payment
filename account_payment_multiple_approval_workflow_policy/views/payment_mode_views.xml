<openerp>
    <data>
        <record id="payment_mode_form_view" model="ir.ui.view">
            <field name="name">payment.mode form</field>
            <field name="model">payment.mode</field>
            <field name="inherit_id" ref="account_payment_workflow_policy.payment_mode_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_order_confirm_grp_ids']" position="replace">
                    <field name="payment_order_confirm_approval_grp_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='payment_order_restart_grp_ids']" position="after">
                    <field name="payment_order_restart_approval_grp_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
</data>
</openerp>
